<% if flash[:apply_positive].present? %>
  <p class="alert alert-success" role="alert"><%= flash[:apply_positive] %> </p>
<% end %>
<% if flash[:apply_negative].present? %>
  <p class="alert alert-warning" role="alert"><%= flash[:apply_negative] %> </p>
<% end %>

<h1>Painel do Candidato</h1>

<p> Email  <%= @candidate.email %> </p>
<p> Nome Completo  <%= @candidate.full_name %> </p>
<p> Tel  <%= @candidate.tel %> </p>
<p> Cidade  <%= @candidate.city  %> </p>
<p> Estado  <%= @candidate.state %> </p>
<p> Bio  <%= @candidate.bio %> </p>


<p> <%= link_to 'Editar perfil', edit_candidate_path(@candidate) %> </p> 
<p> <%= link_to 'Empresas', companies_path %> </p>

<p> Candidaturas: </p>
  <% @candidate.job_applications.each do |job_application| %>

    <div style="border: 1px solid lime; width: 50%" >
      <p> <%=  job_application.job.company.name  %> </p>
      <p> <%=  job_application.job.title  %> </p>
      <p>Status: <%= JobApplication.human_attribute_name("status.#{job_application.status}") %> </p>
      <p> <%= link_to 'Detalhes', edit_job_application_path(job_application)%> </p>
    </div>

  <% end %>