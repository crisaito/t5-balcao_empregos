<h1>Editar perfil</h1>

<% @candidate.errors.full_messages.each do |message| %>

  <p class="alert alert-warning" role="alert"><%= message %></p>
<%end%>
<h3> <%= @candidate.full_name %></h3>

<%= form_for @candidate do |f| %>
  

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :full_name %>
  <%= f.text_field :full_name %>

  <%= f.label :tel %>
  <%= f.text_field :tel %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :bio %>
  <%= f.text_area :bio %>

  <%= f.submit 'Salvar' %>
<% end %>